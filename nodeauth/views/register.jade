extends layout

block content
  .container
    ul.errors
      if errors
        each error in errors
          li.alert.alert-danger #{error.msg}
    h1 Register
    p Please register using the form below

    //Enctype is the way of sending files with the form
    form(method='post',action='/users/register')
      .row
        .input-field.col.s12
          input#name.validate(type='text', name='name')
          label(for='name') Name
      .row
        .input-field.col.s12
          input#email.validate(type='email', name='email')
          label(for='email') Email
      .row
        .input-field.col.s12
          input#username.validate(type='text', name='username')
          label(for='username') Username
      .row
        .input-field.col.s12
          input#password.validate(type='password', name='password')
          label(for='password') Password
      .row
        .input-field.col.s12
          input#confirmPassword.validate(type='password', name='confirmPassword')
          label(for='password') Confirm Password
      //- .row
      //-   .input-field.col.s12
      //-     input#profileImage.validate(type='file', name='profileImage')
      //-     label(for='password') Profile Image
      .row
        .file-field.input-field
          .btn
            span Profile Image
            input#profileImage(name='profileImage',type='file')
          .file-path-wrapper
            input.file-path.validate(type='text')

      .row
        .input-field
          button.col.s12.m4.btn.offset-m4(type='submit') Submit
  